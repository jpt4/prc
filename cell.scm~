;;  390.scm  jpt4  UTC20150905
;;  object oriented version of RLEM, id 3-90

(define (rlem390)
	(let* ([id 0]
				 [role 'stem]
				 [terms '(0 0 0 0 0 0)]
				 [nbrs '(0 0 0 0 0 0)]
				 )
		(lambda (msg)
			(let ([state `((id . ,id) (role . ,role) (terms . ,terms) 
										 (nbrs . ,nbrs))])
				(cond
				 [(assoc msg state) (assoc msg state)]
				 [else 'err])))))
